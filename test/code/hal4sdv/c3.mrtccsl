assume {
    vars {
        sensor {
            continuous process j with normal(0s, 0.5s);
            duration : -1s <= j <= 1s;
            continuous process exec with normal(2s, 0.5s);
            duration : 1s <= exec <= 3s;
        };
        controller {
            continuous process exec with normal(3s, 0.5s);
            duration : 2s <= exec <= 4s;
        };
        actuator {
            continuous process j with normal(0s, 0.5s);
            duration : -1s <= j <= 1s;
            continuous process exec with normal(2s, 0.5s);
            duration : 1s <= exec <= 3s;
        };
    };
} structure {
    sensor {
        start = periodic 15s with jitter vars.sensor.j;
        end = delay start by vars.sensor.exec;
    };
    controller {
        start = sensor.end;
        end = delay start by vars.controller.exec; 
    };
    actuator {
        start = periodic 10s with jitter vars.actuator.j;
        end = delay start by vars.actuator.exec; 
    };
}